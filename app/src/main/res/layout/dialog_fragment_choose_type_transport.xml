<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alert_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_tranport_title"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/text_l"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/dialog_choose_type_metro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_buttons_yes"
            android:drawableLeft="@drawable/reporting_metro"
            android:padding="5dp"
            android:text="METRO"
            android:textSize="@dimen/alert_button_text"/>

        <Button
            android:id="@+id/dialog_choose_type_tram"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_buttons_yes"
            android:drawableLeft="@drawable/reporting_tram"
            android:padding="5dp"
            android:text="TRAMVAJ"
            android:textSize="@dimen/alert_button_text"/>

        <Button
            android:id="@+id/dialog_choose_type_bus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_buttons_yes"
            android:drawableLeft="@drawable/reporting_bus"
            android:padding="5dp"
            android:text="AUTOBUS"
            android:textSize="@dimen/alert_button_text"/>
    </LinearLayout>
</RelativeLayout>